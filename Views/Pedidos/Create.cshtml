@model ADweb.Models.Pedidos

@{
    ViewData["Title"] = "Create";
}

<h2>Nuevo pedido</h2>

<hr />

<div class="contenedor-de-form">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <select asp-for="Cliente" class="form-control">
                    @foreach (var item in ViewBag.MyListClientes)
                    {
                        <option>
                            @item
                        </option>
                    }
                </select>
                <h5>No encuentra al cliente?<a asp-controller="Clientes" asp-action="Create"> Agregar cliente</a></h5>
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EstaPago" /> Esta pago?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EstaEntregado" /> Esta entregado?
                    </label>
                </div>
            </div>
            @*<div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PedidoCerrado" /> @Html.DisplayNameFor(model => model.PedidoCerrado)
                    </label>
                </div>
            </div>*@
            <div class="form-group">
                <label asp-for="TotalCobrado" class="control-label"></label>
                <input asp-for="TotalCobrado" type="number" class="form-control" />
                <span asp-validation-for="TotalCobrado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-default" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
   </div>