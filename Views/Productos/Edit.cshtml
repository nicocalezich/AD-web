@model ADweb.Models.Productos

@{
    ViewData["Title"] = "Editar producto";
}

<h2>Editar</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Producto" class="control-label">Producto</label>
                <input asp-for="Producto" placeholder="Ingrese producto..." class="form-control" />
                <span asp-validation-for="Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo</label>

                <select asp-for="Tipo" class="form-control">
                    <option disabled selected>Seleccione un tipo</option>
                    @foreach (string item in ViewBag.tipos)
                    {
                        <option>@item</option>
                    }
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioKgUnidad" class="control-label">Precio por </label> <select asp-for="UnidadUsada"><option>Kg</option><option>Unidad</option></select>
                <input asp-for="PrecioKgUnidad" placeholder="Ingrese precio..." class="form-control" />
                <span asp-validation-for="PrecioKgUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDisponible" class="control-label">Cantidad disponible</label>
                <input asp-for="CantidadDisponible" placeholder="Ingrese cantidad disponible..." class="form-control" />
                <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
